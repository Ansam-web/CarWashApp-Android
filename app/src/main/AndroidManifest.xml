<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CarWashApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Splash Activity -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.CarWashApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth Activity -->
        <activity
            android:name=".activities.auth.AuthActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- Customer Activities -->
        <activity
            android:name=".activities.customer.CustomerActivity"
            android:exported="false"
            android:label="@string/app_name" />

        <activity
            android:name=".activities.customer.ServicesActivity"
            android:exported="false"
            android:label="@string/services"
            android:parentActivityName=".activities.customer.CustomerActivity" />

        <activity
            android:name=".activities.customer.BookingActivity"
            android:exported="false"
            android:label="@string/bookings"
            android:parentActivityName=".activities.customer.CustomerActivity" />

        <activity
            android:name=".activities.customer.CarsActivity"
            android:exported="false"
            android:label="@string/my_cars"
            android:parentActivityName=".activities.customer.CustomerActivity" />

        <activity
            android:name=".activities.customer.WalletActivity"
            android:exported="false"
            android:label="@string/wallet"
            android:parentActivityName=".activities.customer.CustomerActivity" />

        <!-- Employee Activities -->
        <activity
            android:name=".activities.employee.EmployeeActivity"
            android:exported="false"
            android:label="@string/employee_dashboard" />

        <activity
            android:name=".activities.employee.BookingsManageActivity"
            android:exported="false"
            android:label="@string/manage_bookings"
            android:parentActivityName=".activities.employee.EmployeeActivity" />

        <!-- Manager Activities -->
        <activity
            android:name=".activities.manager.ManagerActivity"
            android:exported="false"
            android:label="@string/manager_dashboard" />

        <activity
            android:name=".activities.manager.ServicesManageActivity"
            android:exported="false"
            android:label="@string/manage_services"
            android:parentActivityName=".activities.manager.ManagerActivity" />

        <activity
            android:name=".activities.manager.TeamsManageActivity"
            android:exported="false"
            android:label="@string/manage_teams"
            android:parentActivityName=".activities.manager.ManagerActivity" />

    </application>

</manifest>