<resources>

    <!-- ========================= -->
    <!-- CarWash Theme (Main) -->
    <!-- ========================= -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#0F7DB8</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorSecondary">#1CB5E0</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">#0F172A</item>

        <item name="android:statusBarColor">#0B4A6F</item>
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>

    <!-- ========================= -->
    <!-- Reusable Styles -->
    <!-- ========================= -->

    <!-- ✅ TextInputLayout style (compatible) -->
    <style name="EditTextStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>

        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>

        <!-- ✅ This attribute exists; it will apply normally -->
        <item name="boxStrokeColor">#93C5FD</item>

        <item name="hintTextColor">#335B6B</item>
    </style>

    <!-- ✅ Primary Button -->
    <style name="ButtonPrimary" parent="Widget.Material3.Button">
        <item name="cornerRadius">14dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>

        <item name="backgroundTint">#2196F3</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- ✅ Secondary Button -->
    <style name="ButtonSecondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">14dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>

        <item name="strokeColor">#2196F3</item>
        <item name="android:textColor">#2196F3</item>
    </style>

    <!-- ✅ Card Style -->
    <style name="CardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">18dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">8dp</item>
    </style>

</resources>
