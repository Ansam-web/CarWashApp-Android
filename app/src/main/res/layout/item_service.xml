<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:strokeWidth="1dp"
    app:strokeColor="#14000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center_vertical">

        <!-- Accent bar -->
        <View
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_accent_bar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Header row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Service Type"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#0B4A6F" />

                <ImageButton
                    android:id="@+id/btnEdit"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Edit"
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="#0B4A6F" />

                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Delete"
                    android:src="@android:drawable/ic_menu_delete"
                    app:tint="#B00020" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description..."
                android:textSize="13sp"
                android:textColor="#335B6B"
                android:layout_marginTop="6dp" />

            <!-- Meta chips -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 min"
                    android:textColor="@android:color/white"
                    app:chipBackgroundColor="#2196F3"
                    app:chipCornerRadius="16dp"
                    app:closeIconVisible="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="$20"
                    android:textColor="@android:color/white"
                    app:chipBackgroundColor="#0B4A6F"
                    app:chipCornerRadius="16dp"
                    app:closeIconVisible="false" />

                <!-- (اختياري) خلي tvMeta موجود عشان لو كودك القديم بستخدمه -->
                <TextView
                    android:id="@+id/tvMeta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
