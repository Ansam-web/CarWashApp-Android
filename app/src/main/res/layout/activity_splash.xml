<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_carwash_auth">

    <!-- bubbles -->
    <View
        android:id="@+id/bubble1"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:background="@drawable/bg_bubble"
        android:alpha="0.8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="26dp"/>

    <View
        android:id="@+id/bubble2"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/bg_bubble"
        android:alpha="0.65"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="80dp"/>

    <View
        android:id="@+id/bubble3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_bubble"
        android:alpha="0.6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="140dp"
        android:layout_marginStart="24dp"/>

    <!-- Center glass card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSplash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        app:cardCornerRadius="26dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="14dp"
        app:strokeWidth="1dp"
        app:strokeColor="#1AFFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="26dp"
            android:background="@drawable/bg_glass_card">

            <!-- App Icon/Logo -->
            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="@string/app_name" />

            <!-- App Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="@string/app_name"
                android:textColor="#0B4A6F"
                android:textSize="26sp"
                android:textStyle="bold" />

            <!-- Tagline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Professional Car Wash Service"
                android:textColor="#335B6B"
                android:textSize="13sp" />

            <!-- Loading Indicator -->
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:indeterminate="true"
                android:indeterminateTint="#2196F3" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Version Info -->
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0"
        android:textColor="#335B6B"
        android:textSize="12sp"
        android:alpha="0.8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
